---
import { getEntry } from "astro:content";

import Avatar from "@/components/Avatar.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Link from "@/components/Link.astro";

const { data: user } = await getEntry("users", "fywk");
---

<BaseLayout title={user.name} description={user.bio}>
  <main
    class="mx-auto flex h-full min-h-[100dvh] w-full max-w-2xl flex-col items-center justify-center gap-y-8 py-16"
  >
    <header
      class="flex w-full flex-col items-center justify-center gap-x-6 gap-y-4 text-center"
    >
      <Avatar name={user.name} avatarURL={user.avatar_url} />
      <div class="flex flex-col gap-y-3">
        <h1
          class="flex items-center justify-center text-2xl/none font-semibold text-slate-50 [text-shadow:0_0_0.25rem_rgb(var(--color-primary))]"
          title={user.name}
        >
          <code>@</code>
          {user.id}
        </h1>
        <p class="leading-7 text-slate-200" set:html={user.bio} />
      </div>
    </header>
    <ul class="flex w-full flex-col gap-y-4">
      {
        user.links.map((link) => (
          <li>
            <Link url={link.url} title={link.title} icon={link.icon} />
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
